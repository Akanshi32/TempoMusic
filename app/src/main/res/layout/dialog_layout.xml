<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicLibrary"
    android:id="@+id/explore_rel"
    android:background="@drawable/bg_animator">

    <ImageView
        android:id="@+id/closeBtn"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_margin="@dimen/dp_16"
        android:layout_alignParentRight="true"
        android:src="@drawable/drawable_close"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/premium"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/sp_24"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/mont_light"
        android:layout_marginTop="@dimen/dp_100"/>

    <ImageView
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@drawable/ic_music_note_24dp"
        android:layout_alignTop="@+id/title"
        android:alpha="0.7"
        android:layout_toLeftOf="@+id/title"/>

    <ImageView
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="@dimen/dp_300"
        android:src="@drawable/premium_tempo_banner"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_below="@id/banner"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_16"
            android:src="@drawable/drawable_love"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/mont_light"
            android:gravity="center"
            android:text="@string/tagline"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dp_10" />
    </LinearLayout>

</RelativeLayout>